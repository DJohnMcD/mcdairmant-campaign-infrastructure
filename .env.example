# Campaign Infrastructure Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080
NODE_ENV=production
SESSION_SECRET=your-super-secure-session-secret-change-this

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:./personal_ai.db
# For cloud deployment (PostgreSQL):
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# External API Keys
NEWS_API_KEY=your-newsapi-key-from-newsapi.org
OPENAI_API_KEY=your-openai-api-key-for-mcp
ANTHROPIC_API_KEY=your-anthropic-api-key

# Payment Processing
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key
SQUARE_ENVIRONMENT=sandbox  # or 'production'

# Email/SMS Notifications
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Cloud Storage (for receipt photos and documents)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Campaign Configuration
CAMPAIGN_NAME="David McDairmant for Congress"
CAMPAIGN_DISTRICT="NY-24"
CAMPAIGN_YEAR=2026
CAMPAIGN_FEC_ID=your-fec-committee-id

# Domain and SSL
DOMAIN_NAME=your-campaign-domain.com
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Security
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-for-api-tokens
CORS_ORIGIN=https://your-campaign-domain.com

# Feature Flags
ENABLE_SOCIAL_MEDIA_AUTOMATION=true
ENABLE_AUTOMATED_BRIEFINGS=true
ENABLE_SQUARE_PAYMENTS=true
ENABLE_NEWS_INTEGRATION=true